        <tbody>
            <% appointment.forEach(function(appointment){ %>
            <tr>
                <td><%= appointment.appointmentID %></td>
                <td><%= appointment.fname %></td>
                <td><%= appointment.phoneNumber %></td>
                <td><%= appointment.appointmentDate %></td>
                <td><%= appointment.appointmentTime %></td>  
                <td><%= appointment.reasonForVisit %></td>   
                <td>
        




<a href="deleteAppointments?appointmentID=<%= appointment.appointmentID %>" > <button class=" btn-primary" >Delete</button></i></a>
<a href="viewPages?patientID=<%= appointment.patientID %>" > <button class=" btn-primary" >View</button></i></a>
                    
                </td>
               
            </tr>
            <%  }); %>
        </tbody>
        </table>
            </div>
        </div>
