        <div class="col-lg-11">
            <div class="table-responsive">
        <table width="1077">
            <thead>
            <tr bgcolor="lightblue">
                <th width="180">Appointment ID</th>
                <th width="180">Nome</th>
                <th width="180">Phone</th>
                <th width="180">Date</th>
                <th width="180">Time</th>
                 <th width="180">Razao</th>
                <th width="180">Ac√ßao</th>
                
        
            </tr>
