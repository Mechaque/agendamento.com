<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Responsive Health Portal</title>
  <%- include("partials/template.ejs") %>

  <style>
    * { box-sizing: border-box; }
    html, body { margin: 0; padding: 0; overflow-x: hidden; -webkit-text-size-adjust: 100%; }

    body {
      font-family: Arial, sans-serif;
      background: #f8f9fa;
      color: #333;
      text-align: center;
      padding: 20px;
    }

    .title {
      position: absolute;
      left: 500px;
      font-family: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
      font-weight: 600;
      color: #004080;
      font-size: clamp(24px, 4vw, 36px);
      margin: 40px auto 40px;
      line-height: 1.4; 
      word-break: break-word;
      max-width: 90%;
      text-align: center;
    }

    .button-group {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 16px;
      margin-bottom: 30px;
    }

    .appointment, .Insurance, .Laboratory {
      background-color: rgb(253, 254, 255);
      border-radius: 12px;
      border-color: #28a745;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      width: calc(33% - 20px);
      padding: 25px;
      text-align: center;
      cursor: pointer;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      transform: translateX(-80px);
      height: 190px;
    }

    .appointment:hover, .Insurance:hover, .Laboratory:hover {
      background-color: #a9c1e5; 
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    }

    .appointment:focus-visible, .Insurance:focus-visible, .Laboratory:focus-visible {
      outline: 3px solid #80bdff;
      outline-offset: 2px;
    }

    .Insurance { margin-top: 100px; }

    .cabelo {
      color: #00796b;
      font-weight: 500;
      padding: 8px 20px;
      border-radius: 6px;
      transition: background-color 0.3s ease-in-out;
    }

    .para {
      color: #00796b;
      font-weight: 500;
      text-decoration: none;
      border: 2px solid #00796b;
      padding: 8px 20px;
      border-radius: 6px;
      transition: background-color 0.3s ease-in-out;
    }

    .para:hover {
      background-color: #00796b;
      color: white;
    }

    /* Modal */
    .modal {
      display: none;
      position: fixed;
      inset: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,.6);
      z-index: 9999;
      justify-content: center;
      align-items: center;
      padding: 16px;
    }
    .modal.active { display: flex; }

    .modal-content {
      background: #fff;
      padding: 24px;
      border-radius: 10px;
      width: min(400px, 100%);
      max-width: 100%;
      box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .modal-header {
      display: flex; justify-content: space-between; align-items: center;
      margin-bottom: 16px;
    }
    .modal-header h2 { font-size: clamp(18px, 4.5vw, 20px); margin: 0; }
    .close { font-size: 26px; cursor: pointer; color: #aaa; }
    .close:hover { color: #333; }

    .modal-body select {
      width: 100%;
      padding: 12px;
      font-size: 16px;
      border-radius: 6px;
      border: 1px solid #ccc;
      margin-bottom: 16px;
    }

    .modal-footer { text-align: right; }
    .modal-footer button {
      padding: 12px 22px;
      font-size: 16px;
      border: none;
      border-radius: 6px;
      background: #28a745;
      color: #fff;
      cursor: pointer;
    }
    .modal-footer button:hover { background: #218838; }

  </style>
</head>
<body>

  <h1 class="title">Your Trusted Gateway to Health Appointments</h1>

  <div class="button-group">
    <!-- Appointment History -->
    <div class="appointment" onclick="window.location.href='appointmentHistory'">
      <h4 class="cabelo">View Appointments History</h4>
      <p style="color: black;">üïì Review your past and upcoming bookings easily.</p>
      <p class="para">Appointment History</p>
    </div>

    <!-- Search Clinic -->
    <div class="Insurance" onclick="window.location.href='searchClinic'">
      <h4 class="cabelo">Search A Clinic</h4>
      <p style="color: black;">üîç Find a clinic near you and connect with top healthcare providers.</p>
      <p class="para">Clinic Listing</p>
    </div>

    <!-- Book Appointment -->
    <div class="Laboratory" id="openModalBtn">
      <h4 class="cabelo">Book Appointment</h4>
      <p style="color: black;">üìÖ Schedule your next visit with just a few clicks.</p>
      <p class="para">Appointment Booking</p>
    </div>
  </div>

 


  <!-- Appointment Modal -->
  <div id="customModal" class="modal">
    <form action="/provClinic" method="post" id="form-user">
      <div class="modal-content">
        <div class="modal-header">
          <h2>Select Province</h2>
          <span class="close" id="closeModal">&times;</span>
        </div>
        <div class="modal-body">
          <select name="provName" required>
            <option disabled selected>Select Province</option>
            <option value="Maputo">Maputo</option>
            <option value="Gaza">Gaza</option>
            <option value="Inhambane">Inhambane</option>
            <option value="Sofala">Sofala</option>
            <option value="Manica">Manica</option>
            <option value="Zambeze">Zambeze</option>
            <option value="Tete">Tete</option>
            <option value="Nampula">Nampula</option>
            <option value="Niassa">Niassa</option>
            <option value="Cabo Delgado">Cabo Delgado</option>
          </select>
        </div>
        <div class="modal-footer">
          <button type="submit">Submit</button>
        </div>
      </div>
    </form>
  </div>

  <script>
    // Appointment Modal
    const openModalBtn = document.getElementById('openModalBtn');
    const modal = document.getElementById('customModal');
    const closeModal = document.getElementById('closeModal');

    openModalBtn.onclick = () => modal.classList.add('active');
    closeModal.onclick = () => modal.classList.remove('active');
    window.onclick = (e) => { if (e.target === modal) modal.classList.remove('active'); };
  </script>

</body>
</html>
