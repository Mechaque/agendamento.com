<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Responsive Health Portal</title>
  <%- include("partials/template.ejs") %>

  <style>
    * { box-sizing: border-box; }
    html, body { margin: 0; padding: 0; overflow-x: hidden; -webkit-text-size-adjust: 100%; }

    body {
      font-family: Arial, sans-serif;
      background: #f8f9fa;
      color: #333;
      text-align: center;
      padding: 20px;
    }

    /* Title */
    .title {
      position: absolute;
      left: 500px;
      font-weight: 700;;
      color: #1e293b;
    font-size: clamp(20px, 3vw, 32px);  /* ✅ responsive font */
     margin: 20px auto 24px;
      line-height: 1.4;
      word-break: break-word;
       max-width: 90%;
    }

    /* Clickable div “buttons” */
    .appointment, .Insurance, .Laboratory {
      display: inline-block;
      margin: 10px;
      padding: 14px 28px;
      font-size: clamp(15px, 2vw, 18px);
      background-color: #007bff;
      color: #fff;
      border-radius: 6px;
      cursor: pointer;
      transition: background .2s ease;
      text-decoration: none;
      user-select: none;
      -webkit-tap-highlight-color: transparent;
      touch-action: manipulation;
    }
    .appointment:hover, .Insurance:hover, .Laboratory:hover { background-color: #0056b3; }
    .appointment:focus-visible, .Insurance:focus-visible, .Laboratory:focus-visible {
      outline: 3px solid #80bdff;
      outline-offset: 2px;
    }

    /* Make the “buttons” stack nicely on small screens */
    @media (max-width: 768px) {
      body { padding: 16px; }

      .appointment, .Insurance, .Laboratory {
        display: block;
        width: 100%;
        max-width: 480px;
        margin: 12px auto;
        padding: 16px;
        font-size: 18px;
        line-height: 1.3;
        white-space: normal;
      }
    }
    @media (max-width: 420px) {
      .appointment, .Insurance, .Laboratory {
        max-width: 100%;
        font-size: 16px;
        padding: 14px;
      }
    }

    /* Modal */
    .modal {
      display: none;
      position: fixed;
      inset: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,.6);
      z-index: 1000;
      justify-content: center;
      align-items: center;
      padding: 16px;
    }
    .modal.active { display: flex; }

    .modal-content {
      background: #fff;
      padding: 24px;
      border-radius: 10px;
      width: min(400px, 100%);
      max-width: 100%;
      box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .modal-header {
      display: flex; justify-content: space-between; align-items: center;
      margin-bottom: 16px;
    }
    .modal-header h2 { font-size: clamp(18px, 4.5vw, 20px); margin: 0; }
    .close { font-size: 26px; cursor: pointer; color: #aaa; }
    .close:hover { color: #333; }

    .modal-body select {
      width: 100%;
      padding: 12px;
      margin-bottom: 16px;
      font-size: 16px;
      border-radius: 6px;
      border: 1px solid #ccc;
    }

    .modal-footer { text-align: right; }
    .modal-footer button {
      padding: 12px 22px;
      font-size: 16px;
      border: none;
      border-radius: 6px;
      background: #28a745;
      color: #fff;
      cursor: pointer;
    }
    .modal-footer button:hover { background: #218838; }

    @media (max-width: 768px) {
      .modal-content { padding: 20px; }
      .modal-footer { text-align: center; }
      .modal-footer button {
        width: 100%;
        font-size: 18px;
        padding: 14px;
      }
    }
  </style>
</head>
<body>

  <h1 class="title">This is your health appointment portal</h1>

  <div class="appointment" onclick="window.location.href='appointmentHistory'">Appointment History</div>
  <div class="Insurance"   onclick="window.location.href='searchClinic'">Search A Clinic</div>
  <div class="appointment" onclick="window.location.href='appointmentHistory'">View Appointments History</div>

  <div class="container" style="max-width: 900px; margin: 0 auto;">
    <div class="Laboratory" id="openModalBtn">Book Appointment</div>

    <!-- Modal -->
    <div id="customModal" class="modal">
      <form action="/provClinic" method="post" id="form-user" class="account">
        <div class="modal-content">
          <div class="modal-header">
            <h2>Selecione A Provincia</h2>
            <span class="close" id="closeModal" aria-label="Close">&times;</span>
          </div>
          <div class="modal-body">
            <select name="provName" id="dropdownMenu" required>
              <option disabled selected>Selecione A Provincia</option>
              <option value="Maputo">Maputo</option>
              <option value="Gaza">Gaza</option>
              <option value="Inhambane">Inhambane</option>
              <option value="Sofala">Sofala</option>
              <option value="Manica">Manica</option>
              <option value="Zambeze">Zambeze</option>
              <option value="Tete">Tete</option>
              <option value="Nampula">Nampula</option>
              <option value="Niassa">Niassa</option>
              <option value="caboDelgado">Cabo Delgado</option>
            </select>
          </div>
          <div class="modal-footer">
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Open/close modal
    const openModalBtn = document.getElementById('openModalBtn');
    const modal        = document.getElementById('customModal');
    const closeModal   = document.getElementById('closeModal');

    openModalBtn.onclick = () => modal.classList.add('active');
    closeModal.onclick   = () => modal.classList.remove('active');
    window.onclick = (e) => { if (e.target === modal) modal.classList.remove('active'); };

    // Make div “buttons” keyboard accessible
    document.querySelectorAll('.appointment, .Insurance, .Laboratory').forEach(el => {
      el.setAttribute('role', 'button');
      el.setAttribute('tabindex', '0');
      el.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); el.click(); }
      });
    });
  </script>

</body>
</html>
