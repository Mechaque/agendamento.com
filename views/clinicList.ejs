<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment History</title>
      <%- include("partials/template.ejs") %>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.0-beta2/css/bootstrap.min.css" integrity="sha512-aqT9YD5gLuLBr6ipQAS+72o5yHKzgZbGxEh6iY8lW/r6gG14e2kBTAJb8XrxzZrMOgSmDqtLaF76T0Z6YY2IHg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/v/dt/dt-2.3.1/datatables.min.css"/>
  <style>
body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

   

    .navbar h1 {
      padding: 10px 16px;
      color: white;
      text-decoration: none;
      text-align: center;
      
    }

    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }

    @media screen and (max-width: 600px) {
      .navbar {
        flex-direction: column;
      }
    }
  .title {
      position: absolute;
      left: 390px;
      font-family: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
      font-weight: 600;
      color: #004080;
      font-size: clamp(24px, 4vw, 36px);
      margin: 40px auto 40px;
      line-height: 1.4; 
      word-break: break-word;
      max-width: 90%;
      text-align: center;
    }
.container {
  position: relative;
  top: 80px;
  left: -91.5px;
}
  /* Make rows visually clickable */
  .clickable-row {
    cursor: pointer;
  }
  .clickable-row:hover {
    background-color: #eef6ff !important; /* Light hover effect */
  }
</style>
</head>
<body>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.0-beta2/js/bootstrap.bundle.min.js" integrity="sha512-43iShtbiyImxjjU4a9rhXBy7eKtIsrpll8xKhe1ghKqh5NyfME8phZs5JRFZpRBe1si44WM3tNmnqMym7JRmDQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
 <h1 class="title">
      
      <span><%= __('list.header') %></span>
    </h1>
<div class="container">
  
    <div class="row my-4">
        <div class="col-lg-11">
            <div class="table-responsive">
<table id="table" class="table table-striped table-hover text-center align-middle mb-0">
  <thead class="table-dark">
    <tr style="text-align: left;">
      <th><%= __('list.table.id') %></th>
      <th><%= __('list.table.name') %></th>
      <th><%= __('list.table.address') %></th>
      <th><%= __('list.table.phone') %></th>
      <th><%= __('list.table.province') %></th>
      <th><%= __('list.table.action') %></th>
    </tr>
  </thead>

  <tbody>
    <% appointment.forEach(function(appointment){ %>
      <tr
        class="clickable-row"
        style="text-align: left;"
        onclick="window.location.href='viewCliList?clinicID=<%= appointment.clinicID %>'"
      >
        <td><%= appointment.clinicID %></td>
        <td><%= appointment.clinicName %></td>
        <td><%= appointment.clinicAddress %></td>
        <td><%= appointment.clinicTelephone %></td>
        <td><%= appointment.province %></td>
        <td>
          <a 
            href="viewCliList?clinicID=<%= appointment.clinicID %>"
            class="btn btn-sm btn-outline-primary"
            onclick="event.stopPropagation();"  <!-- Prevent row click -->
          >
            <i class="fa-solid fa-eye"></i> <%= __('list.view_button') %>
          </a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

            </div>
        </div>
    </div>
  </div>

<!-- jQuery -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- DataTables -->
<script src="https://cdn.datatables.net/v/dt/dt-2.3.1/datatables.min.js"></script>

<script>
$(document).ready(function() {
  $("#table").DataTable({
    order: [0, "desc"],   // Sort by ID
    responsive: true,
    pageLength: 5,        // Show 5 rows per page
    lengthMenu: [5, 10, 20, 50, 100] // Optional: user can change page size
  });
});
</script>


</body>
</html>