<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Appointment History</title>
  <%- include("partials/template.ejs") %>
  <!-- Bootstrap 5 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" integrity="sha512-GWZpQnDBwXoFlM9VKnR8iZzGrJCUi6yi5X1Xn3QeU3cM9A8H69I4t6eLtXn1KkFNh5sZ7E5KPOhxjQbxi8Yo8g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- DataTables -->
  <link rel="stylesheet" href="https://cdn.datatables.net/v/dt/dt-2.3.1/datatables.min.css" />

  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }

  .container {
  position: relative;
  top: 80px;
  left: -185px;
  width: 72%;   /* shrink container by 15% */
  margin: 0 auto; /* keeps it centered */
}


    h1.title {
      text-align: center;
      margin-top: 30px;
      font-weight: bold;
      color: #343a40;
    }

    .card {
      border-radius: 12px;
      box-shadow: 0px 3px 8px rgba(0,0,0,0.1);
    }

    .table-responsive {
      margin-top: 10px;
    }

    /* Smaller adjustments for mobile */
    @media (max-width: 768px) {
      h1.title {
        font-size: 1.4rem;
      }
      table th, table td {
        font-size: 0.85rem;
      }
    }
    #caixa {
     position: relative;
     left: -7px;
    }
    h1.title {
    position: relative;       /* keep it in flow of container */
    top: 0;                   /* adjust if needed */
    text-align: center;
    font-family: 'Inter', sans-serif;
    font-size: 2rem;          /* professional readable size */
    font-weight: 700;
    color: #198754;           /* healthcare green */
    letter-spacing: 1px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

h1.title i {
    margin-right: 10px;
    color: #0dcaf0;           /* soft blue accent */
    font-size: 2.2rem;
}

/* underline effect for a professional touch */
h1.title span::after {
    content: '';
    display: block;
    width: 50%;
    height: 3px;
    margin: 6px auto 0;
    background: linear-gradient(90deg, #0dcaf0, #198754);
    border-radius: 2px;
}

  </style>
</head>
<body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.0-beta2/js/bootstrap.bundle.min.js"></script>

  <div class="container">
    <!-- Title -->
   <h1 class="title">
  <i class="fa-solid fa-magnifying-glass"></i>
  <span>Search Clinic</span>
</h1>

    <!-- Card for table -->
    
    <div class="card my-3" id="caixa">
      <div class="card-body">
        <div class="table-responsive">
          <table id="table" class="table table-striped table-hover text-center align-middle mb-0"> 
            <thead class="table-dark">
              <tr>
                <th>ID da Clínica</th>
                <th>Nome da Clínica</th>
                <th>Endereço</th>
                <th>Telefone</th>
                <th>Província</th>
                <th>Ação</th>
              </tr>
            </thead>
            <tbody>
              <% appointment.forEach(function(appointment){ %>
                <tr>
                  <td><%= appointment.clinicID %></td>
                  <td><%= appointment.clinicName %></td>
                  <td><%= appointment.clinicAddress %></td>
                  <td><%= appointment.clinicTelephone %></td>
                  <td><%= appointment.province %></td>
                  <td>
                    <a href="viewCliList?clinicID=<%= appointment.clinicID %>" class="btn btn-sm btn-outline-primary">
                      <i class="fa-solid fa-eye"></i> View
                    </a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/v/dt/dt-2.3.1/datatables.min.js"></script>
  <script>
    $(document).ready(function(){
      $("table").DataTable({
        order:[0, 'desc'],
        responsive: true,
        pageLength: 5
      });
    });
  </script>
</body>
</html>
