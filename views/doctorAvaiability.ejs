<body>

  <div class="container">
    <!-- Left Sidebar -->
    
    <!-- Main Content -->
  <h1><i class="fa-solid fa-user fa-5x" ></i></h1>
    <div class="main">
      <div class="section">
      
        
        <h1>Dr. <%= docFName %></h1>
        
       
            <div class="info-item"><span>Speciality</span><%= speciality %></div>
            <div class="info-item"><span>Dr. ID:</span> <%= id %></div>
            <div class="info-item"><span>Email:</span><%= email %></div>
            <input type="hidden" name="doctoreID" value="<%= id %>" />

       
      </div>


<div id="bookings">
  <div class="card p-4 text-center">
    <span class="fa-solid fa-suitcase-medical" style="color: red;"></span>
    <button id="avaiButton">&nbsp;View Availability</button>
  </div>
</div>



<div class="tempo">
  <% if (message) { %>
    <p class="text-danger"><%= message %></p>
  <% } else { %>
    <form id="timeForm" action="/book-time" method="POST">
      <input type="hidden" name="doctorID" value="<%= id %>">
      <input type="hidden" name="clinicID" value="<%= clinicID %>">
      <input type="hidden" name="date" value="<%= data %>">
      <input type="hidden" name="docFName" value="<%= docFName %>">
       <input type="hidden" name="docLName" value="<%= docLName %>">
      
     
      
      <div class="row row-cols-3 g-2"> 
        <% tempo.forEach(function(t, index){ %>
          <div class="col text-center">
            <!-- Radio button -->
            <input class="btn-check" type="radio" name="time" id="time-<%= index %>" value="<%= t %>" autocomplete="off">
            
            <!-- Label styled as button -->
            <label class="btn btn-success btn-sm w-100 time-btn" 
                   style="font-size: 0.8rem;" 
                   for="time-<%= index %>">
              <%= t %>
            </label>
          </div>
        <% }) %>
      </div>

      <div class="text-center mt-3 d-flex justify-content-center gap-3">
        <!-- Submit button -->
        <button type="submit" class="btn btn-success px-4 py-2">Book Time</button>
        <!-- Reset button -->
        <button type="button" id="resetTime" class="btn btn-outline-danger px-4 py-2">Reset</button>
      </div>
    </form>
  <% } %>
</div>


<script>
  document.getElementById("resetTime").addEventListener("click", function() {
    // Uncheck all radio buttons
    document.querySelectorAll("#timeForm input[type='radio']").forEach(radio => {
      radio.checked = false;
    });
  });
</script>





   

<input type="hidden" id="userID" value="<%= id %>">

  
  <form id="dateForm" method="GET" action="/change-date">
    <input type="hidden" name="userID" value="<%= id %>" />
    <input type="date" name="date" id="dateInput" value="dateInput" onchange="document.getElementById('dateForm').submit()" />
  </form>
<div class="availableTime"> </div>

</div>








</body>
