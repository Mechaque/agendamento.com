  }

    /* Default time buttons */
  .time-btn {
    transition: all 0.2s ease-in-out;
  }

  /* When hovered */
  .time-btn:hover {
    background-color: #218838 !important; /* darker green */
    color: #fff;
    transform: scale(1.05);
  }

  /* When selected */
  .btn-check:checked + .time-btn {
    background-color: #0d6efd !important; /* Bootstrap blue (or your highlight color) */
