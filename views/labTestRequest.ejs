<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adicionar Testes</title>
  <%- include("partials/template.ejs") %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap");

    body {
      background-color: #f3f3f9;
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f3f3f9;
      min-height: 105vh; /* 5% taller than the viewport height */
    }
.container {
  display: flex;
  justify-content: flex-start; /* align left */
  padding: 40px 20px;
  margin-left: 2%; /* shift 20% from the left edge */
  margin-top: -2%;  /* move it up by 2% */
  
}



    .account {
      width: 100%;
      max-width: 800px;
      background-color: #fff;
      box-shadow: rgba(0,0,0,0.1) 0px 2px 8px;
      border-radius: 10px;
      padding: 30px;
    }

    .account-header {
      margin-bottom: 20px;
      border-bottom: 2px solid #e5e7eb;
      padding-bottom: 10px;
    }

    .account-title {
      font-size: 22px;
      font-weight: 600;
      color: #1f2937;
      margin: 0;
    }

    fieldset {
      border: none;
      margin: 20px 0;
      padding: 0;
    }

    legend {
      font-size: 16px;
      font-weight: 500;
      margin-bottom: 10px;
      color: #374151;
    }

    .input-group {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-bottom: 15px;
    }

    .input-container {
      flex: 1;
      min-width: 220px;
      display: flex;
      flex-direction: column;
    }

    label {
      font-size: 14px;
      color: #374151;
      margin-bottom: 5px;
    }

    input, select, textarea {
      padding: 10px;
      border: 1.5px solid #cbd5e1;
      border-radius: 6px;
      font-size: 14px;
      font-family: inherit;
      transition: border-color 0.2s;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: #536dfe;
    }

    textarea {
      min-height: 100px;
      resize: vertical;
    }

    .form-actions {
      display: flex;
      justify-content: flex-end;
      gap: 15px;
      margin-top: 20px;
    }

    .btn {
      width: 140px;
      padding: 10px 0;
      border: none;
      border-radius: 25px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .btn-submit {
      background-color: #536dfe;
      color: white;
    }

    .btn-submit:hover {
      background-color: #4053c9;
    }

    .btn-cancel {
      background-color: #e5e7eb;
      color: #374151;
    }

    .btn-cancel:hover {
      background-color: #d1d5db;
    }

    footer {
  margin-top: 2%;
}

  </style>
</head>
<body>
  <div class="container">
    <form action="/labtestes" method="POST" id="form-user" class="account">
      <div class="account-header">
        <h1 class="account-title">Add Tests</h1>
      </div>

      <fieldset>
        <legend>Personal Information</legend>
        <div class="input-group">
          <div class="input-container">
            <label for="fname">Name</label>
            <input type="text" id="fname" name="fname" placeholder="Name" value="<%= fname %>">
          </div>
          <div class="input-container">
            <label for="lname">Last Name</label>
            <input type="text" id="lname" name="lname" placeholder="Last Name" required>
          </div>
        </div>
      </fieldset>

      <fieldset>
        <legend>Appointment Details</legend>
        <div class="input-group">
          <div class="input-container">
            <label for="appointmentID">Appointment ID</label>
            <input type="text" id="appointmentID" name="appointmentID" placeholder="Appointment ID" required>
          </div>
          <div class="input-container">
            <label for="patientID">Patient ID</label>
            <input type="text" id="patientID" name="patientID" placeholder="Patient ID" value="<%= patientID %>">
          </div>
          <div class="input-container">
            <label for="phoneNumber">Phone Number</label>
            <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Phone Number" value="<%= phoneNumber %>">
          </div>
        </div>
      </fieldset>

      <fieldset>
       
        <div class="input-container">
          <label for="lab">Laboratory</label>
          <select name="labID" id="lab" required>
            <option value="">--Select--</option>
            <option value="primaLab">PrimaLab</option>
            <option value="HCMLab">LabHCM</option>
          </select>
        </div>
      </fieldset>

      <fieldset>
        
        <div class="input-container">
          <label for="testName">Test Name</label>
          <textarea id="testName" name="testName" placeholder="Nome De Testes" required></textarea>
        </div>
      </fieldset>

      <div class="form-actions">
        <button type="submit" class="btn btn-submit">Submit</button>
        <button type="button" class="btn btn-cancel" onclick="window.history.back()">Cancel</button>
      </div>
    </form>
  </div>
</body>
</html>
