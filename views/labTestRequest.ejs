<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adicionar Testes</title>
  <%- include("partials/template.ejs") %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap");

    body {
      background-color: #f3f3f9;
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f3f3f9;
      min-height: 105vh; 
    }

.container {
  display: flex;
  justify-content: flex-start;
  padding: 40px 20px;
  margin-left: 2%;
  margin-top: -2%;  
}

    .account {
      width: 100%;
      max-width: 800px;
      background-color: #fff;
      box-shadow: rgba(0,0,0,0.1) 0px 2px 8px;
      border-radius: 10px;
      padding: 30px;
    }

    .account-header {
      margin-bottom: 20px;
      border-bottom: 2px solid #e5e7eb;
      padding-bottom: 10px;
    }

    .account-title {
      font-size: 22px;
      font-weight: 600;
      color: #1f2937;
      margin: 0;
    }

    fieldset {
      border: none;
      margin: 20px 0;
      padding: 0;
    }

    legend {
      font-size: 16px;
      font-weight: 500;
      margin-bottom: 10px;
      color: #374151;
    }

    .input-group {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-bottom: 15px;
    }

    .input-container {
      flex: 1;
      min-width: 220px;
      display: flex;
      flex-direction: column;
    }

    label {
      font-size: 14px;
      color: #374151;
      margin-bottom: 5px;
    }

    input, select, textarea {
      padding: 10px;
      border: 1.5px solid #cbd5e1;
      border-radius: 6px;
      font-size: 14px;
      font-family: inherit;
      transition: border-color 0.2s;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: #536dfe;
    }

    textarea {
      min-height: 100px;
      resize: vertical;
    }

    .form-actions {
      display: flex;
      justify-content: flex-end;
      gap: 15px;
      margin-top: 20px;
    }

    .btn {
      width: 140px;
      padding: 10px 0;
      border: none;
      border-radius: 25px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .btn-submit {
      background-color: #536dfe;
      color: white;
    }

    .btn-submit:hover {
      background-color: #4053c9;
    }

    .btn-cancel {
      background-color: #e5e7eb;
      color: #374151;
    }

    .btn-cancel:hover {
      background-color: #d1d5db;
    }

    footer {
  margin-top: 2%;
}

  </style>
</head>
<body>
  <div class="container">
    <form action="/labtestes" method="POST" id="form-user" class="account">
      <div class="account-header">
        <h1 class="account-title"><%= __('labTestReq.header') %></h1>
      </div>

      <!-- Personal Information -->
      <fieldset>
        <legend><%= __('labTestReq.sections.personalInfo') %></legend>
        <div class="input-group">
          <div class="input-container">
            <label for="fname"><%= __('labTestReq.fields.fname') %></label>
            <input type="text" id="fname" name="fname" placeholder="<%= __('labTestReq.placeholders.fname') %>" value="<%= fname %>">
          </div>
          <div class="input-container">
            <label for="lname"><%= __('labTestReq.fields.lname') %></label>
            <input type="text" id="lname" name="lname" placeholder="<%= __('labTestReq.placeholders.lname') %>" required>
          </div>
        </div>
      </fieldset>

      <!-- Appointment Details -->
      <fieldset>
        <legend><%= __('labTestReq.sections.appointmentDetails') %></legend>
        <div class="input-group">
          <div class="input-container">
            <label for="appointmentID"><%= __('labTestReq.fields.appointmentID') %></label>
            <input type="text" id="appointmentID" name="appointmentID" placeholder="<%= __('labTestReq.placeholders.appointmentID') %>" required>
          </div>
          <div class="input-container">
            <label for="patientID"><%= __('labTestReq.fields.patientID') %></label>
            <input type="text" id="patientID" name="patientID" placeholder="<%= __('labTestReq.placeholders.patientID') %>" value="<%= patientID %>">
          </div>
          <div class="input-container">
            <label for="phoneNumber"><%= __('labTestReq.fields.phoneNumber') %></label>
            <input type="text" id="phoneNumber" name="phoneNumber" placeholder="<%= __('labTestReq.placeholders.phoneNumber') %>" value="<%= phoneNumber %>">
          </div>
        </div>
      </fieldset>

      <!-- Laboratory Selection -->
      <fieldset>
        <div class="input-container">
          <label for="lab"><%= __('labTestReq.fields.lab') %></label>
          <select name="labID" id="lab" required>
            <option value="">--<%= __('labTestReq.placeholders.lab') %>--</option>
            <option value="primaLab"><%= __('labTestReq.labOptions.primaLab') %></option>
            <option value="HCMLab"><%= __('labTestReq.labOptions.HCMLab') %></option>
          </select>
        </div>
      </fieldset>

      <!-- Test Details -->
      <fieldset>
        <div class="input-container">
          <label for="testName"><%= __('labTestReq.fields.testName') %></label>
          <textarea id="testName" name="testName" placeholder="<%= __('labTestReq.placeholders.testName') %>" required></textarea>
        </div>
      </fieldset>

      <!-- Buttons -->
      <div class="form-actions">
        <button type="submit" class="btn btn-submit"><%= __('labTestReq.buttons.submit') %></button>
        <button type="button" class="btn btn-cancel" onclick="window.history.back()"><%= __('labTestReq.buttons.cancel') %></button>
      </div>
    </form>
  </div>
</body>
</html>
