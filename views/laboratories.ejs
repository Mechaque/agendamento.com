<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Personal Laboratory Portal</title>
  <%- include("partials/template.ejs") %>

  <style>
    * { box-sizing: border-box; }
    html, body { margin: 0; padding: 0; overflow-x: hidden; -webkit-text-size-adjust: 100%; }

    body {
      font-family: Arial, sans-serif;
      background: #f8f9fa;
      color: #333;
      text-align: center;
      padding: 20px;
    }

    /* Title */
     .title {
      position: absolute;
      left: 500px;
      font-weight: 700;;
      color: #1e293b;
    font-size: clamp(20px, 3vw, 32px);  /* ✅ responsive font */
     margin: 20px auto 24px;
      line-height: 1.4;
      word-break: break-word;
       max-width: 90%;
    }

    /* Clickable div buttons */
    .appointment, .Insurance, .Laboratory {
      display: inline-block;
      margin: 10px;
      padding: 14px 28px;
      font-size: clamp(15px, 2vw, 18px);
      background-color: #007bff;
      color: #fff;
      border-radius: 6px;
      cursor: pointer;
      transition: background .2s ease;
      text-decoration: none;
      user-select: none;
      -webkit-tap-highlight-color: transparent;
      touch-action: manipulation;
    }
    .appointment:hover, .Insurance:hover, .Laboratory:hover { background-color: #0056b3; }
    .appointment:focus-visible, .Insurance:focus-visible, .Laboratory:focus-visible {
      outline: 3px solid #80bdff;
      outline-offset: 2px;
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
      body { padding: 16px; }
      .appointment, .Insurance, .Laboratory {
        display: block;
        width: 100%;
        max-width: 480px;
        margin: 12px auto;
        padding: 16px;
        font-size: 18px;
        line-height: 1.3;
        white-space: normal;
      }
    }
    @media (max-width: 420px) {
      .appointment, .Insurance, .Laboratory {
        max-width: 100%;
        font-size: 16px;
        padding: 14px;
      }
    }
  </style>
</head>
<body>

  <!-- Title -->
  <h1 class="title">This is your personal Laboratory</h1>

  <!-- Action buttons -->
  <div class="appointment" onclick="window.location.href='labHistory'">Test History</div>
  <div class="Laboratory" onclick="window.location.href='labTestRequest'">Book A Lab Test</div>
  <div class="Insurance" onclick="window.location.href='searchLab'">Search Laboratory</div>

  <script>
    // Make div “buttons” keyboard accessible
    document.querySelectorAll('.appointment, .Insurance, .Laboratory').forEach(el => {
      el.setAttribute('role', 'button');
      el.setAttribute('tabindex', '0');
      el.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); el.click(); }
      });
    });
  </script>

</body>
</html>
