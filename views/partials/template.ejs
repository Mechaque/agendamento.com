<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Professional Sidebar Navigation</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      display: flex;
      height: 100vh;
      background-color: #f8f9fa;
      color: #333;
    }

    .sidebar {
      width: 240px;
      background-color: #1e293b;
      color: #fff;
      display: flex;
      flex-direction: column;
      position: fixed;
      height: 100%;
      padding: 30px 20px;
      left: 0;
      top: 0;
    }

    .sidebar .logo {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 40px;
      text-align: center;
    }

    .nav-link {
      display: flex;
      align-items: center;
      padding: 12px 15px;
      border-radius: 6px;
      color: #cbd5e1;
      text-decoration: none;
      margin-bottom: 10px;
      transition: background 0.3s, color 0.3s;
    }

    .nav-link:hover {
      background-color: #334155;
      color: #ffffff;
    }

    .nav-link i {
      margin-right: 12px;
      font-size: 16px;
      width: 20px;
      text-align: center;
    }

    .main-content {
      margin-left: 240px;
      padding: 40px;
      flex: 1;
    }

    .main-content h1 {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 10px;
      text-align: center;
    }

    .main-content p {
      font-size: 16px;
      color: #555;
      text-align: center;
    }

    .appointment {
      position: absolute;
      top: 200px;
      left: 380px;
      height: 100px;
      width: 200px;
      border-radius: 5px;
      background-color: #007bff;
      color: white;
      text-align: center;
      padding: 12px 24px;
      font-size: 16px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .Laboratory {
      position: absolute;
      top: 200px;
      left: 900px;
      height: 100px;
      width: 200px;
      border-radius: 10px;
      background-color: #1e293b;
      color: white;
      text-align: center;
    }

    .Insurance {
      position: absolute;
      top: 300px;
      left: 640px;
      height: 100px;
      width: 200px;
      border-radius: 5px;
      background-color: #007bff;
      color: white;
      text-align: center;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .newsLetter {
      background-image: url('images/green_leaves.jpg');
      background-attachment: fixed;
      position: fixed;
      top: 0;
      right: 0;
      width: 202px;
      height: 100vh;
      overflow-y: auto;
      color: white;
      text-align: center;
    }

    footer {
      position: absolute;
      text-align: center;
      background-color: rgb(245, 249, 245);
      color: black;
      padding: 20px 0;
      margin-top: 20px;
      opacity: .7;
      bottom: -10px;
      left: 40%;
      top: 750px;
    }

    /* Dropdown styles */
    .dropdown-menu {
      background-color: #1e293b;
      border: none;
      min-width: 220px;
      padding: 10px 0;
      z-index: 1000;
    }

    .dropdown-item {
      color: #cbd5e1;
      font-size: 14px;
    }

    .dropdown-item:hover {
      background-color: #334155;
      color: white;
    }

    .dropdown-divider {
      border-top: 1px solid #475569;
      margin: 8px 0;
    }

    .form-switch .form-check-input {
      cursor: pointer;
      background-color: #64748b;
      border-color: #64748b;
    }

    .form-switch .form-check-input:checked {
      background-color: #0ea5e9;
      border-color: #0ea5e9;
    }

    .sidebar .dropdown {
      position: relative;
    }

    /* Dark Mode Support */
    .dark-mode {
      background-color: #0f172a;
      color: #e2e8f0;
    }

    .dark-mode .sidebar {
      background-color: #0f172a;
    }

    .dark-mode .main-content {
      background-color: #1e293b;
    }

    .dark-mode .dropdown-menu {
      background-color: #1e293b;
    }
    .logout-btn {
  background-color: #007bff;
  color: white;
  border: none;
  width: 100%;
  padding: 12px 15px;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  text-align: left;
  display: flex;
  align-items: center;
  gap: 10px;
  transition: background-color 0.3s ease;
  cursor: pointer;
}

.logout-btn:hover {
  background-color: #0056b3;
}

.logout-btn i {
  width: 20px;
  text-align: center;
  font-size: 16px;
}

  </style>
</head>
<body>

  <!-- Sidebar -->
  <nav class="sidebar">
    <div class="logo">Agendamento.com</div>
    <a href="/home" class="nav-link"><i class="fas fa-home"></i> Dashboard</a>
    <a href="/userProfile" class="nav-link"><i class="fas fa-user"></i> Profile</a>
    <a href="/appointment" class="nav-link"><i class="fas fa-calendar-alt"></i> Appointments</a>
    <a href="/laboratory" class="nav-link"><i class="fa-solid fa-flask-vial"></i> Laboratory</a>
    <a href="/insurance" class="nav-link"><i class="fa-solid fa-suitcase-medical"></i> Insurances</a>

    <!-- Settings Dropdown -->
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" id="settingsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-cog"></i> Settings
      </a>
      <ul class="dropdown-menu" aria-labelledby="settingsDropdown">
        <li><a class="dropdown-item" href="/resetPassword"><i class="fas fa-key me-2"></i>Reset Password</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-language me-2"></i>Language</a></li>
        <li><a class="dropdown-item" href="#"><i class="fas fa-bell me-2"></i>Notifications</a></li>
        <li><hr class="dropdown-divider"></li>
        <li>
          <div class="dropdown-item d-flex justify-content-between align-items-center">
            <span><i class="fas fa-moon me-2"></i>Dark Mode</span>
            <div class="form-check form-switch m-0">
              <input class="form-check-input" type="checkbox" id="themeToggle">
            </div>
          </div>
        </li>
      </ul>
    </div>

    <!-- Logout Button -->
    <form action="/logout" method="POST" class="logout-form mt-3">
  <button type="submit" class="logout-btn">
    <i class="fas fa-sign-out-alt me-2"></i> Logout
  </button>
</form>
  </nav>

  <!-- Main Content -->
  <div class="main-content">
  
  </div>

  <!-- Optional Newsletter Section -->
  <div class="newsLetter"></div>

  <!-- Footer -->
  <footer>
    &copy; 2025 Moz Insurance Network.
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Dark Mode Script -->
  <script>
    const themeToggle = document.getElementById('themeToggle');

    if (localStorage.getItem('darkMode') === 'true') {
      document.body.classList.add('dark-mode');
      themeToggle.checked = true;
    }

    themeToggle.addEventListener('change', function () {
      if (this.checked) {
        document.body.classList.add('dark-mode');
        localStorage.setItem('darkMode', 'true');
      } else {
        document.body.classList.remove('dark-mode');
        localStorage.setItem('darkMode', 'false');
      }
    });
  </script>
</body>
</html>
