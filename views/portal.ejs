  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0; 
    }

   body {
   overflow: hidden;
  font-family: 'Inter', sans-serif;
  background-color: #f8f9fa;
  color: #333;
}
html, body {
  height: 100%;          /* Take full viewport height */
  margin: 0;
  display: flex;
  flex-direction: column;
}

    /* Sidebar */
    .sidebar {
      width: 240px;
      background-color: #1e293b;
      color: #fff;
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      position: fixed;
      height: 100%;
    }

    .sidebar .logo {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 40px;
      text-align: center;
    }

    .nav-link {
      display: flex;
      align-items: center;
      padding: 12px 15px;
      border-radius: 6px;
      color: #cbd5e1;
      text-decoration: none;
      margin-bottom: 10px;
      transition: background 0.3s, color 0.3s;
    }

    .nav-link:hover {
      background-color: #334155;
      color: #ffffff;
    }

    .nav-link i {
      margin-right: 12px;
      font-size: 16px;
      width: 20px;
      text-align: center;
    }

    /* Main */
   .main-content {
  margin-left: calc(240px - 10%); /* sidebar width minus 10% */
  padding: 40px;
  flex: 1;
}


    .main-content h1 {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 10px;
      text-align: center;
    }

    .main-content p {
      font-size: 16px;
      color: #555;
      text-align: center;
      margin-bottom: 30px;
    }

    /* Responsive cards instead of absolute buttons */
    .cards {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      margin-bottom: 30px;
    }

    .card-btn {
      flex: 1 1 200px;
      max-width: 250px;
      height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #007bff;
      color: white;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: background 0.3s;
      text-decoration: none;
    }

    .card-btn:hover {
      background-color: #0056b3;
    }

    /* Newsletter / Resource */
    .resource, .resourceContent {
      max-width: 350px;
      margin: 20px auto;
      border-radius: 6px;
      padding: 15px;
    }

    .resource {
      background-color: #1e293b;
      color: white;
      text-align: center;
      font-weight: bold;
    }

    .resourceContent {
      background-color: #c5d2e9;
      color: black;
      text-align: left;
      list-style: none;
      padding-left: 20px;
    }

    /* Footer */
    footer {
      position: relative;
      text-align: center;
      background-color: rgb(245, 249, 245);
      color: black;
      padding: 20px 0;
      opacity: .7;
      margin-top: 40px;
    }

    /* MOBILE RESPONSIVE */
    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }

      .sidebar {
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* top links stay top, logout stays bottom */
  height: 100vh;
  position: fixed;
  width: 240px;
  padding: 30px 20px;
  background-color: #1e293b;
}


      .main-content {
        margin-left: 0;
        padding: 20px;
      }

      .cards {
        flex-direction: column;
        align-items: center;
      }
    }

    .topTitle {
  font-size: 32px;               /* bigger, prominent */
  font-weight: 700;              /* bold */
  text-align: center;            /* center aligned */
  color: #1e293b;                /* dark slate color */
  margin-bottom: 15px;           /* space below */
  letter-spacing: 1px;           /* subtle spacing */
  text-transform: capitalize;    /* capitalize words */
  position: relative;
}

.topTitle::after {
  content: "";
  display: block;
  width: 80px;                   /* underline length */
  height: 3px;
  background: #007bff;           /* blue accent underline */
  margin: 8px auto 0;            /* center it */
  border-radius: 2px;
}

 /* Main Content */
    .container {
      max-width: 1200px;
      margin: 40px auto;
      padding: 0 55px;
    }
    
    .content {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 30px;
    }

    /* Cards */
    .card {
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      width: calc(33% - 20px);
      padding: 25px;
      text-align: center;
      cursor: pointer;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    }

    .card h3 {
      font-size: 24px;
      color: #00796b; /* Teal */
      margin-bottom: 15px;
      font-weight: 500;
    }

    .card p {
      color: #666;
      font-size: 16px;
      margin-bottom: 20px;
    }

    .card a {
      color: #00796b; /* Teal */
      font-weight: 500;
      text-decoration: none;
      border: 2px solid #00796b; /* Teal */
      padding: 8px 20px;
      border-radius: 6px;
      transition: background-color 0.3s ease-in-out;
    }

    .card a:hover {
      background-color: #00796b; /* Teal */
      color: white;
    }
/* Logout Button Styling */
